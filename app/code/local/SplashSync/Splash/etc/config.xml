<?xml version="1.0"?>
<config>
    <modules>
        <SplashSync_Splash>
            <version>0.1.0</version>
        </SplashSync_Splash>
    </modules>
    <global>
        <blocks>
            <Splash>
                <class>SplashSync_Splash_Block</class>
            </Splash>
<!--            <splashsync_splash_adminhtml>
                <class>SplashSync_Splash_Block_Adminhtml</class>
            </splashsync_splash_adminhtml>-->
        </blocks>
        
        <models>
            <splashsync_splash>
                <class>SplashSync_Splash_Model</class>
            </splashsync_splash>
        </models>
        <helpers>
            <splashsync_splash>
                <class>SplashSync_Splash_Helper</class>
            </splashsync_splash>
        </helpers>
        
        <resources>
            <splashsync_splash_setup>
                <setup>
                    <module>SplashSync_Splash</module>
                </setup>
            </splashsync_splash_setup>
        </resources>
        
        
        <events>
            <model_save_before>
                <observers>
                    <splashsync_splash>
                        <class>splashsync_splash/observer</class>
                        <method>onSaveBefore</method>
                    </splashsync_splash>
                </observers>
            </model_save_before>
            <model_save_commit_after>
                <observers>
                    <splashsync_splash>
                        <class>splashsync_splash/observer</class>
                        <method>onSaveCommitAfter</method>
                    </splashsync_splash>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <splashsync_splash>
                        <class>splashsync_splash/observer</class>
                        <method>onDeleteCommitAfter</method>
                    </splashsync_splash>
                </observers>
            </model_delete_commit_after>
        </events>
        
    </global>
    <admin>
        <routers>
            <SplashSync_Splash_Admin>
                <use>admin</use>
                <args>
                    <module>SplashSync_Splash</module>
                    <frontName>splash</frontName>
                </args>                
                
                <modules>
                    <SplashSync_Splash after="Mage_Adminhtml">SplashSync_Splash</SplashSync_Splash>
                </modules>                
                
            </SplashSync_Splash_Admin>
        </routers>
    </admin>
    
