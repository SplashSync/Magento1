    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <splashsync_splash_options>
                                            <title>Splashsync Module Section</title>
                                        </splashsync_splash_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
    <default>
        <splashsync_splash_options>
            <core>
                <lang>en_US</lang>
            </core>
            <langs>
                <default_lang>en_US</default_lang>
            </langs>
        </splashsync_splash_options>
    </default>        
                
